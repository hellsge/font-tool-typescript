{
  "name": "@font-tools/converter-ts",
  "version": "1.0.1",
  "description": "TypeScript font converter for embedded systems - converts TrueType fonts to optimized binary formats",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "font-converter": "bin/font-converter.js"
  },
  "files": [
    "dist",
    "bin",
    "examples",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "prepublishOnly": "npm run build && npm test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='.test.ts$' --testPathIgnorePatterns='properties|integration|e2e|compatibility'",
    "test:properties": "jest --testPathPattern='properties.test.ts$'",
    "test:integration": "jest --testPathPattern='integration.test.ts$|e2e.test.ts$'",
    "test:compatibility": "jest --testPathPattern='compatibility.test.ts$'",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "ini": "^4.1.0",
    "opentype.js": "^1.3.4",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/opentype.js": "^1.3.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "fast-check": "^3.15.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "font",
    "converter",
    "embedded",
    "truetype",
    "bitmap",
    "vector",
    "ttf",
    "font-tools",
    "embedded-systems",
    "cross-platform"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/font-tools.git",
    "directory": "font-tool-typescript"
  },
  "bugs": {
    "url": "https://github.com/your-org/font-tools/issues"
  },
  "homepage": "https://github.com/your-org/font-tools#readme"
}
